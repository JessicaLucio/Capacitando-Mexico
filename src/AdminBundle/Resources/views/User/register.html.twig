{% extends 'WebBundle::layout.html.twig' %}

{% block content %}
    <div class='row row-margin'>
        {% for message in app.session.flashBag().get('status') %}
            <div class='alert alert-success alert-dismissable' role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message }} 
            </div>
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h1>¡BIENVENIDO!</h1>
            <p class="text-gray-dark">Completa los siguientes campos para crear tu cuenta.</p>
        </div>
    </div>
    <div class='row'>
        <div class='col-xs-12 col-md-6'>
            {{ form_start(form)}}
            <div>
                <label class='control-label'>Nombre(s)</label>
                {{form_widget(form.name)}}
            </div>
            <div>
                <label class='control-label'>Apellidos</label>
                {{form_widget(form.surname)}}
            </div>
            <div>
                <label class='control-label'>Correo Electronico</label>
                {{form_widget(form.email)}}
            </div>
            <div>
                <label class='control-label'>Nombre de Usuario</label>
                {{form_widget(form.nickname)}}
            </div>
            <div>
                <label class='control-label'>Contraseña</label>
                {{form_widget(form.password)}}
            </div>
            <div>
                <label class='control-label'>País</label>
                {{form_widget(form.country)}}
            </div>
            <div>
                <label class='control-label'>Ciudad</label>
                {{form_widget(form.city)}}
            </div>
            <div>
                <label class='control-label'>Nivel Educativo</label>
                {{form_widget(form.levelEducation)}}
            </div>
            <div>
                <label class='control-label'>Año de Nacimiento</label>
                {{form_widget(form.yearBirth)}}
            </div>
            <div>
                {{form_widget(form.terminos)}}
                <label class='control-label m-xs-l-1 m-xs-b-3'>Acepto los términos y condiciónes</label>
            </div>

            {{ form_end(form)}}
        </div>
    </div>

{% endblock %}

