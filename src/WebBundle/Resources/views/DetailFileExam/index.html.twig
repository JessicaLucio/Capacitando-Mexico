{% extends 'WebBundle::layout.html.twig' %}

{% block content %}    
    <div class='row'>
        <div claSS="col-xs-12">
            <h4 class='space'>Haz sido seleccionado para evaluar a un alumno, solo tienes que descargar el archivo y calificar su proyecto.</h4>
        </div>
    </div>

    <div class='row'>
        <div class='col-xs-12 text-center'>
            {% if file_exam %}
                <a class="btn btndownload" aria-hidden="true" href="{{ asset("uploads/file-exam/"~file_exam.course.id~"/"~file_exam.unidad.id~"/"~file_exam.file)}}" taget="_blank">
                    <i class='fa fa-arrow-down m-xs-r-1'></i>Descagar el archivo
                </a>
            {% endif %}
            {% if file_exam %}   
                <form method='post'>
                    <div class='form-group col-xs-12 col-md-4 col-md-offset-7'>
                        {#                            <label class='control-label'>Califica el examen:</label>#}
                        <select class='form-control btnspace' name='calificacion'>
                            <option disabled selected='selected'>--Escoge una opcion--</option>
                            <option value='5'>5</option>
                            <option value='8'>8</option>
                            <option value='10'>10</option>
                        </select>
                    </div>
                    <div class='form-group col-xs-12 col-md-2 col-md-offset-4 m-xs-tb-5'>
                        <input type="hidden" value="{{file_exam.course.id}}" name="course-id" />
                        <input type="hidden" value="{{file_exam.unidad.id}}" name="unidad-id" />
                        <input type="hidden" value="{{file_exam.remitente.id}}" name="remitente-id" />
                        <input type='submit' class='btn btn-success btn-block' value='Calificar' />
                    </div>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}

